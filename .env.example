BOT_TOKEN=your_telegram_bot_token
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-3-flash-preview
GEMINI_API_VERSION=v1
GEMINI_FALLBACK_API_VERSION=v1beta

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=chat_analytics
POSTGRES_USER=app
POSTGRES_PASSWORD=app_password
DATABASE_URL=postgresql://app:app_password@postgres:5432/chat_analytics

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379
REDIS_FALLBACK_URL=redis://host.docker.internal:6379

CACHE_TTL_SECONDS=1200
ANALYZE_MESSAGE_LIMIT=80
ANALYZE_LOOKBACK_DAYS=30

# Alerts via Telegram (optional)
ALERTS_ENABLED=false
ALERTS_TELEGRAM_BOT_TOKEN=your_alerts_bot_token
ALERTS_TELEGRAM_CHAT_ID=your_chat_id
ALERTS_LOG_LINES=200
ALERTS_COMPOSE_PROJECT=ai-telegram-bot-nextjs-nodejs-postgres-redis
ALERTS_HEALTHCHECK_URL=http://localhost:3000/api/v1/health
ALERTS_HEALTHCHECK_INTERVAL=30
ALERTS_HEALTHCHECK_TIMEOUT=5
ALERTS_HEALTHCHECK_STATE_FILE=/tmp/chat-analytics-health.status
